<h2 style="color:crimson;">Productos Cargados</h2>

{{#if hayProductos}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each productos}}
                <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.price}}
                </td>
                <td>
                    <img src={{this.thumbnail}} width="30" height="30"></img>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">No hay productos</h3>
{{/if}}
<br>

<form action="/" method="get">            
    <button class="btn btn-success mt-3 mb-5">Cargar Producto</button>
</form>
<br>      