<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h2 style="color:crimson;">Productos Cargados</h2>

            <% const hayProductos = productos.length > 0; %>
            <% if(hayProductos){ %>
            
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;">
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                    <% for (const producto of productos) {%>
                    <tr>
                        <td>
                            <%=producto.id%>
                        </td>
                        <td>
                            <%=producto.title%>
                        </td>
                        <td>
                            <%=producto.price%>
                        </td>
                        <td>
                            <img src=<%=producto.thumbnail%> width="30" height="30"></img>
                        </td>
                    </tr>
                    <%};%>
                </table>
            </div>
            <% } else{ %>
            <h3 class="alert alert-danger">No hay productos</h3>
                <% } %>
            <br> 
            
            <form action="/" method="get">            
                <button class="btn btn-success mt-3 mb-5">Cargar Producto</button>
            </form>
            <br>            
        </div>
    </div>
</body>

</html>





